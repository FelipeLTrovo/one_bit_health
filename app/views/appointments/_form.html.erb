<%= javascript_include_tag "form.js" %>

<%= simple_form_for(@appointment) do |form| %>
  <%= display_flash_messages_object(@appointment) %>
  <div class="card-body">
    <div class="form-group">
      <%= form.text_field :title, placeholder: "Título", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_area :description, placeholder: "Descrição", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.datetime_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_field :professional, placeholder: "Professional", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.association :tags,
          label: 'Tags', as: :select,
          collection: @tags,
          label_method: :content,
          :multiple => true,
          class: 'chosen-select'
        %>
    </div>

    <div class="form-group form-file-upload form-file-multiple">
      <%= form.file_field :files, multiple: true, class: "file-upload" %>
      <div class="input-group">
        <input type="text" class="form-control input-name-files" placeholder="Anexos">
        <span class="input-group-btn">
          <label for="appointment_files" class="btn btn-fab btn-round btn-primary">
            <i class="material-icons">attach_file</i>
            <div class="ripple-container"></div>
          </label>
        </span>
      </div>
    </div>

    <%= form.submit class: "btn btn-primary float-right mr-3 my-4" %>
  </div>
<% end %>
